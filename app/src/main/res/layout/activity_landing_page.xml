<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/gradEnd">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/square"
            android:padding="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo01xxxhdpi"
            android:backgroundTint="@color/colorPrimary"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:text="Welcome to MOPMAS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:textColor="@color/colorPrimary"/>
</RelativeLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardv1"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="310dp"
        app:cardBackgroundColor="@color/gradEnd"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pic_patient" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:text="I am patient"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>



    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardv2"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginTop="310dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@color/gradEnd"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pic_doctor" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:text="I am therapist"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>